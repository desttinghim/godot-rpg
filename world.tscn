extends Container

func _ready():
	hide()
	get_node(\"Menu/Resume\").connect(\"pressed\", self, \"toggle_pause\")
	set_process_input(true)

func toggle_pause():
	if get_tree().is_paused(): 
		get_tree().set_pause(false)
		hide()
	else:
		get_tree().set_pause(true)
		show()

func _input(event):
	if event.is_action_pressed(\"ui_pause\"):
		toggle_pause()
